# Kuurier Production Environment Configuration
# Copy this file to .env.production and fill in all values
#
# IMPORTANT: Never commit .env.production to version control!

# ==============================================================================
# DATABASE
# ==============================================================================

POSTGRES_USER=kuurier
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_HERE
POSTGRES_DB=kuurier

# Connection pool settings
DB_MAX_CONNS=50
DB_MIN_CONNS=10
DB_MAX_CONN_LIFETIME=60
DB_MAX_CONN_IDLE_TIME=15

# ==============================================================================
# SECURITY - GENERATE THESE!
# ==============================================================================

# Generate with: openssl rand -base64 32
JWT_SECRET=GENERATE_WITH_openssl_rand_-base64_32

# Generate with: openssl rand -base64 32 | head -c 32
ENCRYPTION_KEY=GENERATE_32_BYTE_KEY_HERE_____

# Token duration in hours (720 = 30 days)
TOKEN_DURATION_HOURS=720

# ==============================================================================
# OBJECT STORAGE
# ==============================================================================

# Generate strong credentials for MinIO
MINIO_ACCESS_KEY=CHANGE_THIS_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_THIS_MINIO_SECRET_KEY
MINIO_BUCKET=kuurier-media

# ==============================================================================
# APPLE PUSH NOTIFICATIONS
# ==============================================================================

# Path to your APNs auth key (.p8 file)
# Upload to server and set absolute path
APNS_KEY_PATH=/opt/kuurier/keys/AuthKey.p8

# From Apple Developer Portal
APNS_KEY_ID=YOUR_KEY_ID
APNS_TEAM_ID=YOUR_TEAM_ID
APNS_BUNDLE_ID=com.yourcompany.kuurier
APNS_PRODUCTION=true

# ==============================================================================
# DOMAIN (for documentation/reference)
# ==============================================================================

# Your domain name (configure in nginx)
DOMAIN=api.yourdomain.com
